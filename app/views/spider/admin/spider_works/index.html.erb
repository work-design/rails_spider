<div class="ui top attached borderless menu">
  <div class="header item">Spider Works</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Spider Work', new_admin_spider_work_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= SpiderWork.human_attribute_name(:id) %></th>
      <th><%= SpiderWork.human_attribute_name(:name) %></th>
      <th><%= SpiderWork.human_attribute_name(:host) %></th>
      <th><%= SpiderWork.human_attribute_name(:list_path) %></th>
      <th><%= SpiderWork.human_attribute_name(:item_path) %></th>
      <th><%= SpiderWork.human_attribute_name(:page_params) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @spider_works.each do |spider_work| %>
    <tr>
      <td><%= spider_work.id %></td>
      <td><%= spider_work.name %></td>
      <td><%= spider_work.host %></td>
      <td><%= spider_work.list_path %></td>
      <td><%= spider_work.item_path %></td>
      <td><%= spider_work.page_params %></td>
      <td class="ui labels">
        <%= link_to admin_spider_work_path(spider_work), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_spider_work_path(spider_work), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_spider_work_path(spider_work), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @spider_works %>
